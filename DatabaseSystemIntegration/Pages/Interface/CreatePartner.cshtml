@page
@model DatabaseSystemIntegration.Pages.Interface.CreatePartnerModel
@{
    ViewData["Title"] = "Add Partner";
}
<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <form method="post">
        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="BusinessName">Business Name</label>
            <div class="col-sm-10">
                <input asp-for="BusinessName" class="form-control" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="Address">Address</label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="Phone">Phone</label>
            <div class="col-sm-10">
                <input asp-for="Phone" class="form-control" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="Email">Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="Description">Description</label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="StatusID">Status</label>
            <div class="col-sm-10">
                <select asp-for="StatusID" class="form-control">
                    @foreach (var status in Model.Status)
                    {
                        <option value="@status.Partner_Status_ID">@status.Status_Flag</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row mt-4">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary me-2" asp-page-handler="Submit">Submit</button>
                <button type="submit" class="btn btn-secondary me-2" asp-page-handler="PopulateHandler">Populate</button>
                <button type="submit" class="btn btn-danger" asp-page-handler="ClearHandler">Clear</button>
            </div>
        </div>
    </form>
</div>
