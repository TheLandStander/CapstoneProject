@page
@model DatabaseSystemIntegration.Pages.Interface.CreateGrantModel
@{
    ViewData["Title"] = "Add Grant";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="GrantName">Grant Name</label>
            <div class="col-sm-10">
                <input asp-for="GrantName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Amount">Amount</label>
            <div class="col-sm-10">
                <input asp-for="Amount" class="form-control" type="number" step="0.01" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="SubDate">Submission Date</label>
            <div class="col-sm-10">
                <input asp-for="SubDate" class="form-control" type="date" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="DueDate">Due Date</label>
            <div class="col-sm-10">
                <input asp-for="DueDate" class="form-control" type="date" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="StatusID">Status</label>
            <div class="col-sm-10">
                <select asp-for="StatusID" class="form-control">
                    @foreach (var status in Model.Status)
                    {
                        <option value="@status.StatusID">@status.GrantStatusName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="CategoryID">Category</label>
            <div class="col-sm-10">
                <select asp-for="CategoryID" class="form-control">
                    @foreach (var category in Model.Category)
                    {
                        <option value="@category.CategoryID">@category.CategoryName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="ProjectID">Project</label>
            <div class="col-sm-10">
                <select asp-for="ProjectID" class="form-control">
                    @foreach (var project in Model.Projects)
                    {
                        <option value="@project.ProjectID">@project.ProjectName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary" asp-page-handler="">Submit</button>
                <button type="submit" class="btn btn-secondary" asp-page-handler="PopulateHandler">Populate</button>
                <button type="submit" class="btn btn-danger" asp-page-handler="ClearHandler">Clear</button>
            </div>
        </div>
    </form>
</div>
