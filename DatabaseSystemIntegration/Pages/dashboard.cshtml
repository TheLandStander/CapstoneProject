@model DatabaseSystemIntegration.Pages.dashboardModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            background-color: #fff;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            width: 80px;
            background-color: #46007a;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 1rem;
        }

            .sidebar .icon {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                object-fit: cover; /* Ensures the image covers the circle */
            }

            .sidebar svg {
                color: #fff;
                margin-bottom: 2rem;
                cursor: pointer;
            }

        .main-content {
            margin-left: 80px;
            padding: 2rem;
        }

        .search-bar {
            width: 100%;
            padding: 0.75rem 1rem;
            border-radius: 20px;
            border: 1px solid #ccc;
            margin-bottom: 2rem;
        }

        .task-card {
            background-color: #bca2d8;
            border-radius: 16px;
            padding: 1rem;
            color: #000;
            margin-bottom: 2rem;
        }

        .task-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
        }

            .task-item img {
                width: 40px;
                border-radius: 50%;
                margin-right: 1rem;
            }

        .right-panel {
            padding-left: 2rem;
            width: 320px;
            flex-shrink: 0;
        }

        .milestone {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding: 1rem;
            border-radius: 12px;
        }

        .highlight {
            background-color: #bca2d8;
        }

        .schedule-btn {
            background-color: #46007a;
            color: white;
            border-radius: 12px;
            border: none;
            padding: 0.75rem;
            width: 100%;
        }

        .project-hours {
            margin-top: 2rem;
        }

        .bar {
            height: 100px;
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            gap: 5px;
        }

            .bar div {
                width: 8px;
                background: #bca2d8;
                height: 70%;
            }

        media (max-width: 991px) {
            .content-wrapper

        {
            flex-direction: column;
        }

        .right-panel {
            padding-left: 0;
            margin-top: 2rem;
            width: 100%;
        }

        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <img src="Duke.jpg" alt="Logo" class="icon mb-4" />

            <a href="dashboard.html" class="text-white mb-4" title="Dashboard">
                <i class="bi bi-grid" style="font-size: 1.5rem;"></i>
            </a>

            <a href="profile.html" class="text-white mb-4" title="Profile">
                <i class="bi bi-person" style="font-size: 1.5rem;"></i>
            </a>

            <a href="analytics.html" class="text-white mb-4" title="Analytics">
                <i class="bi bi-bar-chart" style="font-size: 1.5rem;"></i>
            </a>

            <a href="messenger.html" class="text-white mb-4" title="Analytics">
                <i class="bi bi-messenger" style="font-size: 1.5rem;"></i>
            </a>

            <a href="project.html" class="text-white mb-4" title="Settings">
                <i class="bi-plus-circle" style="font-size: 1.5rem;"></i>
            </a>

            <a href="login.html" class="text-white mt-auto" title="Logout">
                <i class="bi bi-box-arrow-right" style="font-size: 1.5rem;"></i>
            </a>
        </div>

        <!-- Main content -->
        <div class="container-fluid main-content">
            <div class="d-flex content-wrapper gap-4">
                <!-- Left / Main Section -->
                <div style="flex: 1;">
                    <input type="text" class="search-bar" placeholder="Enter project or grant keywords" />
                    <h5>Welcome, User</h5>
                    <p>Access your projects and grants progress and status here.</p>

                    <!-- Task section -->
                    <div class="task-card">
                        <h6>Ongoing</h6>
                        <div class="task-item">
                            <div class="d-flex align-items-center">
                                <img src="https://via.placeholder.com/40" alt="John Doe" />
                                <div>
                                    <strong>John Doe</strong><br />
                                    Project review meeting
                                </div>
                            </div>
                            <small class="text-white">Deadline imminent</small>
                        </div>
                        <div class="task-item">
                            <div class="d-flex align-items-center">
                                <img src="Duke.jpg" alt="Jane Smith" />
                                <div>
                                    <strong>Jane Smith</strong><br />
                                    Grant proposal submission
                                </div>
                            </div>
                            <small class="text-white">Submission due soon</small>
                        </div>
                        <div class="task-item">
                            <div class="d-flex align-items-center">
                                <img src="https://via.placeholder.com/40" alt="Alex Johnson" />
                                <div>
                                    <strong>Alex Johnson</strong><br />
                                    Grant approval process
                                </div>
                            </div>
                            <small class="text-white">Deadline approaching</small>
                        </div>
                        <div class="text-center mt-3">
                            <button class="schedule-btn">View all tasks</button>
                        </div>
                    </div>

                    <!-- Graph -->
                    <div class="project-hours">
                        <h6>Total project hours</h6>
                        <div class="d-flex" style="align-items: flex-end; height: 160px; gap: 16px; border-left: 1px solid #ccc; border-bottom: 1px solid #ccc; padding-left: 20px;">
                            <!-- Y-axis -->
                            <div class="d-flex flex-column justify-content-between text-end pe-2" style="height: 100%;">
                                <div>10h</div>
                                <div>8h</div>
                                <div>6h</div>
                                <div>4h</div>
                                <div>2h</div>
                                <div>0</div>
                            </div>

                            <!-- Bars -->
                            <div class="d-flex align-items-end gap-3">
                                <div class="text-center">
                                    <div style="height: 80px; width: 16px; background-color: #bca2d8; border-radius: 4px;"></div>
                                    <small>Faculty</small>
                                </div>
                                <div class="text-center">
                                    <div style="height: 100px; width: 16px; background-color: #bca2d8; border-radius: 4px;"></div>
                                    <small>Student</small>
                                </div>
                                <div class="text-center">
                                    <div style="height: 90px; width: 16px; background-color: #bca2d8; border-radius: 4px;"></div>
                                    <small>Partner</small>
                                </div>
                                <div class="text-center">
                                    <div style="height: 100px; width: 16px; background-color: #bca2d8; border-radius: 4px;"></div>
                                    <small>JMU</small>
                                </div>
                                <div class="text-center">
                                    <div style="height: 70px; width: 16px; background-color: #bca2d8; border-radius: 4px;"></div>
                                    <small>Project</small>
                                </div>
                                <div class="text-center">
                                    <div style="height: 60px; width: 16px; background-color: #bca2d8; border-radius: 4px;"></div>
                                    <small>Grants</small>
                                </div>
                                <div class="text-center">
                                    <div style="height: 90px; width: 16px; background-color: #bca2d8; border-radius: 4px;"></div>
                                    <small>Tasks</small>
                                </div>
                                <div class="text-center">
                                    <div style="height: 80px; width: 16px; background-color: #bca2d8; border-radius: 4px;"></div>
                                    <small>Month</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right panel -->
                <div class="right-panel">
                    <h6>Upcoming project milestones</h6>
                    <div class="milestone bg-light">
                        <span><strong>2</strong> Budget allocation meeting<br /><small>Progress review meeting</small></span>
                        <small>10:00–11:00</small>
                    </div>
                    <div class="milestone highlight">
                        <span><strong>5</strong> Grant evaluation session<br /><small>Required attendance</small></span>
                        <small>14:00–15:30</small>
                    </div>
                    <div class="milestone bg-light">
                        <span><strong>8</strong> 7 of 10 sessions, Dr. Brown<br /><small>5 of 8 sessions, Prof. Green</small></span>
                        <small>11:30–13:00</small>
                    </div>
                    <div class="milestone bg-light">
                        <span><strong>1</strong> Team meeting<br /><small>Grant application workshop</small></span>
                        <small>14:00–15:30</small>
                    </div>
                    <div class="milestone bg-light">
                        <span><strong>9</strong> Monthly progress review<br /><small>Bi-weekly check-in meeting</small></span>
                        <small>09:00–10:30</small>
                    </div>

                    <button class="schedule-btn mt-3">View full schedule</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
