@page
@model IndexModel;
@{
    <div class="d-flex justify-content-center mt-5">
        <div class="text-center" style="width: 600px;">
            <form method="post" class="p-5 border rounded shadow bg-light">
                <h1 class="mb-4">Sign into your account</h1>

                <div class="form-group">
                    <h4>User Name</h4>
                    <input type="text" asp-for="username" class="form-control" style="width: 100%;" />
                </div>

                <div class="form-group mt-3">
                    <h4>Password</h4>
                    <input type="password" asp-for="password" class="form-control" style="width: 100%;" />
                </div>

                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mt-3">
                        @ViewData["ErrorMessage"]
                    </div>
                }

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary w-100 p-2">Login</button>
                </div>
            </form>
        </div>
    </div>

}
