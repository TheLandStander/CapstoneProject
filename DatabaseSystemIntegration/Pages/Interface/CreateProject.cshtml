@page
@model DatabaseSystemIntegration.Pages.Interface.CreateProject
@{
    ViewData["Title"] = "Add Project";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <form method="post">
        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="Project_Name">Project Name</label>
            <div class="col-sm-10">
                <input asp-for="Project_Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="Project_Description">Project Description</label>
            <div class="col-sm-10">
                <textarea asp-for="Project_Description" class="form-control" rows="3"></textarea>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="StartDate">Start Date</label>
            <div class="col-sm-10">
                <input asp-for="StartDate" class="form-control" type="date" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="DueDate">Due Date</label>
            <div class="col-sm-10">
                <input asp-for="DueDate" class="form-control" type="date" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="StatusID">Project Status</label>
            <div class="col-sm-10">
                <select asp-for="StatusID" class="form-control">
                    @foreach (var status in Model.ProjectStatuses)
                    {
                        <option value="@status.ProjectStatusID">@status.ProjectStatusName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row mt-4">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary me-2" asp-page-handler="">Submit</button>
                <button type="submit" class="btn btn-secondary me-2" asp-page-handler="PopulateHandler">Populate</button>
                <button type="submit" class="btn btn-danger" asp-page-handler="ClearHandler">Clear</button>
            </div>
        </div>
    </form>
</div>


    