@page
@model DatabaseSystemIntegration.Pages.Interface.CreateGrantModel
@{
    ViewData["Title"] = "Add Grant";
}

<head>
    <style>
        /* Overall background color for the page */
        body {
            background-color: #f4f7fa; /* Light grey background for the page */
        }

        .create-grant-page .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .create-grant-form {
            background-color: #ffffff; /* White background for the form */
            border-radius: 12px;
            padding: 2rem;
            border: 1px solid #ddd;
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .1);
        }

            .create-grant-form .form-label {
                font-weight: 600;
                color: #333;
            }

            .create-grant-form .form-control,
            .create-grant-form .form-select {
                border: 1px solid #ced4da;
                border-radius: 8px;
                padding: 0.5rem;
                font-size: 0.95rem;
            }

                .create-grant-form .form-control:focus,
                .create-grant-form .form-select:focus {
                    border-color: #b599ce;
                    box-shadow: 0 0 0 0.2rem rgba(181, 153, 206, 0.25);
                    outline: none;
                }

            .create-grant-form .btn {
                border-radius: 6px;
                font-size: 0.95rem;
                padding: 0.5rem 1.25rem;
                min-width: 120px;
            }

            .create-grant-form .btn-primary {
                background-color: #b599ce;
                border-color: #b599ce;
                color: #fff;
            }

            .create-grant-form .btn-secondary {
                background-color: #6c757d;
                border-color: #6c757d;
                color: #fff;
            }

            .create-grant-form .btn-danger {
                background-color: #dc3545;
                border-color: #dc3545;
                color: #fff;
            }

            .create-grant-form .btn:hover {
                opacity: 0.95;
            }

        /* Improved form layout for responsive design */
        .create-grant-page h1 {
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .create-grant-form {
            padding: 1.5rem;
        }

            .create-grant-form .form-label {
                font-size: 1rem;
            }

            .create-grant-form .form-control,
            .create-grant-form .form-select {
                font-size: 1rem;
            }

            .create-grant-form .btn {
                width: 100%;
                margin-bottom: 10px;
            }
    </style>
</head>

<div class="create-grant-page container mt-4" style="margin-bottom:50px;">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <form method="post" class="create-grant-form">
        <div class="mb-3">
            <label class="form-label" for="GrantName">Grant Name</label>
            <input asp-for="GrantName" class="form-control" id="GrantName" placeholder="Enter the name of the grant" />
        </div>

        <div class="mb-3">
            <label class="form-label" for="FundingAgency">Funding Agency</label>
            <input asp-for="FundingAgency" class="form-control" id="FundingAgency" placeholder="Enter the funding agency name" />
        </div>

        <div class="mb-3">
            <label class="form-label" for="Amount">Amount</label>
            <input asp-for="Amount" class="form-control" id="Amount" type="number" step="0.01" placeholder="Enter the grant amount" />
        </div>

        <div class="mb-3">
            <label class="form-label" for="DueDate">Due Date</label>
            <input asp-for="DueDate" class="form-control" id="DueDate" type="date" />
        </div>

        <div class="mb-3">
            <label class="form-label" for="CategoryID">Category</label>
            <select asp-for="CategoryID" class="form-select" id="CategoryID">
                <option value="" disabled selected>Select Category</option>
                @foreach (var category in Model.Category)
                {
                    <option value="@category.CategoryID">@category.CategoryName</option>
                }
            </select>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary me-2" asp-page-handler="SubmitHandler">Submit</button>
            <button type="submit" class="btn btn-secondary me-2" asp-page-handler="PopulateHandler">Populate</button>
            <button type="submit" class="btn btn-danger" asp-page-handler="ClearHandler">Clear</button>
        </div>
    </form>
</div>
