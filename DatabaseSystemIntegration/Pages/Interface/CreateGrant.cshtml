@page
@model DatabaseSystemIntegration.Pages.Interface.CreateGrantModel
@{
    ViewData["Title"] = "Add Grant";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <form method="post">
        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" >Grant Name</label>
            <div class="col-sm-10">
                <input asp-for="GrantName" class="form-control" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label">Funding Agency</label>
            <div class="col-sm-10">
                <input asp-for="FundingAgency" class="form-control" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="Amount">Amount</label>
            <div class="col-sm-10">
                <input asp-for="Amount" class="form-control" type="number" step="0.01" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="DueDate">Due Date</label>
            <div class="col-sm-10">
                <input asp-for="DueDate" class="form-control" type="date" />
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" for="CategoryID">Category</label>
            <div class="col-sm-10">
                <select asp-for="CategoryID" class="form-control">
                    @foreach (var category in Model.Category)
                    {
                        <option value="@category.CategoryID">@category.CategoryName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row mt-4">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-secondary me-2" asp-page-handler="PopulateHandler">Populate</button>
                <button type="submit" class="btn btn-danger me-2" asp-page-handler="ClearHandler">Clear</button>
                <button type="submit" class="btn btn-primary" asp-page-handler="">Submit</button>
            </div>
        </div>
    </form>
</div>
