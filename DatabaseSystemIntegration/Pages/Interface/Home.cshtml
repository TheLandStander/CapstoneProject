@page
@model DatabaseSystemIntegration.Pages.Interface.Home
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .main-section {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin: 20px;
        }

        .left-panel {
            flex: 3; 
            height: 100%;
            padding: 20px;
        }

        .right-panel {
            flex: 5;
            height: 100%;
            padding: 20px;
            border: 1px solid #ddd;
            background-color: #bca2d8;
            border-radius: 8px;
        }


        .search-bar {
            width: 100%;
            padding: 0.75rem 1rem;
            border-radius: 20px;
            border: 1px solid #ccc;
            margin-bottom: 2rem;
        }

         h6,h4,h3,h6 {
            color: #000000;
        }

        table {
            width: 100%; 
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #bca2d8;
            color: white;
        }

        td {
            background-color: #f9f9f9;
        }

        .button-container {
            text-align: center;
            margin-top: 20px;
            border: 1px solid #ddd;
            background-color: #bca2d8;
        }

        button {
            background-color: #46007a;
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
        }

            button:hover {
                background-color: #bca2d8;
            }
    </style>
</head>
<body>
    <form method="post">
        <div class="main-section">

            <div class="left-panel" style="padding-right:50px">
                <input asp-for="Search" class="search-bar" placeholder="Task Name" />
                <button type="submit" asp-page-handler="Search" class="visually-hidden">Search</button>

                <div>
                    <h4>Welcome, @Model.User.Name</h4>
                    <p>Access your assigned tasks here</p>
                </div>

                <div class="task-card" style="background-color: #bca2d8">
                    
                    @if (Model.DisplayedTasks == null || Model.DisplayedTasks.Length == 0)
                    {
                        <p>Good Work, All Tasks Completed!</p>
                    }
                    else
                    {
                        <h6>Ongoing Tasks</h6>
                        <table>
                            <thead>
                                <tr>
                                    <th>Task Name</th>
                                    <th>Description</th>
                                    <th>Due Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var task in Model.DisplayedTasks)
                                {
                                    <tr>
                                        <td>
                                            <button class="btn btn-link" asp-page-handler="SelectTask" asp-route-id="@task.TaskID">@task.TaskName</button>
                                        </td>
                                        <td>@task.Description</td>
                                        <td>@task.DueDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>

            <div class="right-panel">
                <h3>Upcoming Project Deadlines</h3>
                @if (Model.DisplayedProjects.Length == 0)
                {
                    <p>Good Work, All Projects Completed!</p>
                }
                else
                {
                    <table>
                        <thead>
                            <tr>
                                <th>Project Urgency Ranking</th>
                                <th>Project Name</th>
                                <th>Description</th>
                                <th>Due Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.DisplayedProjects.Length; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <button class="btn btn-link" asp-page-handler="SelectProject" asp-route-id="@Model.DisplayedProjects[i].ProjectID">@Model.DisplayedProjects[i].ProjectName</button>
                                    </td>
                                    <td>@Model.DisplayedProjects[i].Description</td>
                                    <td>@Model.DisplayedProjects[i].DueDate</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </form>
</body>
</html>
